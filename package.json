{
  "name": "money-come-terminal",
  "version": "1.3.1",
  "description": "钱来终端 - 为交易而生的 A 股量化看盘终端",
  "main": "./out/main/index.js",
  "author": "drqyq",
  "scripts": {
    "dev": "unset ELECTRON_RUN_AS_NODE && electron-vite dev",
    "build": "electron-vite build",
    "preview": "unset ELECTRON_RUN_AS_NODE && electron-vite preview",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:win": "electron-vite build && electron-builder --win",
    "build:linux": "electron-vite build && electron-builder --linux"
  },
  "build": {
    "appId": "com.drqyq.money-come-terminal",
    "productName": "Money Come Terminal",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "icon": "build/icon.png",
    "mac": {
      "category": "public.app-category.finance",
      "identity": null,
      "target": "dmg",
      "darkModeSupport": true,
      "extendInfo": {
        "CFBundleDisplayName": "钱来终端"
      }
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "钱来终端"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Finance"
    }
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "antd": "^5.12.0",
    "axios": "^1.7.0",
    "klinecharts": "^9.8.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.7.0",
    "electron-vite": "^2.0.0",
    "typescript": "^5.3.0"
  }
}
